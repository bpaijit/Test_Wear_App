<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="planbdevs.mobileApp.activities.BidActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivBidItemPhoto"
        android:src="@drawable/auction_image_bmw"
        android:layout_gravity="center|bottom"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:layout_marginRight="5dp"/>

    <TextView
        android:text="@string/highes_bidder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivBidItemPhoto"
        android:id="@+id/tvBidHeader"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Highest Bid:  "
        android:id="@+id/tvAuctionItemHighestBidLabel"
        android:layout_below="@id/tvBidHeader"
        android:layout_marginRight="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:id="@+id/tvAuctionItemHighestBid"
        android:layout_toRightOf="@id/tvAuctionItemHighestBidLabel"
        android:layout_alignTop="@+id/tvAuctionItemHighestBidLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Bid Date:  "
        android:id="@+id/tvAuctionItemLastBidDateLabel"
        android:layout_below="@id/tvAuctionItemHighestBidLabel"
        android:layout_marginRight="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:id="@+id/tvAuctionItemLastBidDate"
        android:layout_toRightOf="@id/tvAuctionItemLastBidDateLabel"
        android:layout_alignTop="@+id/tvAuctionItemLastBidDateLabel"/>

</RelativeLayout>
